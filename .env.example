# Database
DATABASE_URL="postgresql://tomflips:tomflips_dev@localhost:5432/tomflips"

# Redis (optional — app works without it, just slower)
REDIS_URL="redis://localhost:6379"

# Auth — SECURITY: Generate strong secrets for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Secrets MUST be at least 32 characters. The app will refuse to start in production with weak values.
JWT_SECRET="CHANGE_ME_generate_with_crypto_randomBytes_64"
JWT_REFRESH_SECRET="CHANGE_ME_generate_with_crypto_randomBytes_64"

# eBay API
# NOTE: The eBay OAuth callback is handled by the API server (port 4000), not the frontend.
# Make sure this matches what you registered in the eBay Developer Portal.
EBAY_CLIENT_ID=""
EBAY_CLIENT_SECRET=""
EBAY_REDIRECT_URI="http://localhost:4000/api/connections/ebay/callback"
EBAY_API_URL="https://api.ebay.com"

# Etsy API
# NOTE: The Etsy OAuth callback is handled by the API server (port 4000), not the frontend.
# Make sure this matches what you registered in the Etsy Developer Portal.
ETSY_CLIENT_ID=""
ETSY_CLIENT_SECRET=""
ETSY_REDIRECT_URI="http://localhost:4000/api/connections/etsy/callback"

# App
PORT=4000
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"
API_URL="http://localhost:4000"
CORS_ORIGINS="http://localhost:3000"

# Storage (optional — for cloud image uploads)
# SECURITY: Never commit real AWS credentials. Use IAM roles in production.
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_BUCKET_NAME=""
AWS_REGION=""
